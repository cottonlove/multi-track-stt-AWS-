{
  "compileOnSave": true,
  "include": ["src/**/*"],
  "exclude": ["node_modules", "test", "**/*.spec.ts", "dist"],
  "compilerOptions": {
    "importHelpers": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "declaration": false,
    "module": "commonjs",
    "target": "es2022",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  }
}
